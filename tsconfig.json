{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "./dist",
        "esModuleInterop": true,
        "removeComments": true,
        "moduleResolution": "node",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "strict": false,
        },
        "include": ["src"],
        "exclude": ["node_modules", "dist/*", "src/static"],
        "lib": ["es6"]
}